FROM registry.redhat.io/rhel8/httpd-24

EXPOSE 8080

USER 0

RUN yum update -yqq && \
    yum install -y \
#        php \
#        php-fpm \
#        php-curl \
        wget \
        vim && \
     echo "ServerName 127.0.0.1"  >> /etc/httpd/conf/httpd.conf
     

RUN chown -R 1000990000:1000990000 /etc/httpd && \
    chown -R 1000990000:1000990000 /run/httpd


     
   


USER 1000990000


CMD ["/usr/bin/run-httpd"]
